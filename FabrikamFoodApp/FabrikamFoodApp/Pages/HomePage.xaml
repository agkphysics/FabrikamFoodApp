<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FabrikamFoodApp.Pages.HomePage"
             xmlns:cv="clr-namespace:Xamarin.Forms;assembly=Xamarin.Forms.CarouselView"
             Title="Home">
    <Grid RowSpacing="0" Margin="0" VerticalOptions="FillAndExpand">
        <Grid.RowDefinitions>
            <RowDefinition Height="150" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <cv:CarouselView x:Name="imageSlider" Grid.Row="0" Margin="0">
            <cv:CarouselView.ItemTemplate>
                <DataTemplate>
                    <StackLayout>
                        <Image Source="{Binding .}" Aspect="AspectFill" Margin="0" />
                    </StackLayout>
                </DataTemplate>
            </cv:CarouselView.ItemTemplate>
        </cv:CarouselView>

        <Grid Grid.Row="1" Margin="0" BackgroundColor="Blue">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>
            <Button Grid.Row="0" Margin="20,0,20,0" BackgroundColor="#4267B2" TextColor="#FFFFFF" Text="Login with Facebook" FontSize="Large" Clicked="loginButton_Clicked" x:Name="loginButton" />
            <Button Grid.Row="1" Text="About" Margin="20,0,20,0" VerticalOptions="End"  x:Name="aboutButton" Clicked="aboutButton_Clicked" />
        </Grid>
    </Grid>
</ContentPage>